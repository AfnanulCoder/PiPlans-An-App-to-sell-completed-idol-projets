<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProblemsDetailsView"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/cardview_dark_background"
        android:weightSum="7"
        />

    <TextView
        android:id="@+id/theProblemTitleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Smart Lock Using Image Recognition"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/theProblemCategoryID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Vision"
        android:textColor="#000000"
        android:textSize="17sp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/theProblemSubmitterID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submitted By: Afnanul Hassan"
        android:textColor="#000000"
        android:textSize="17sp"
        android:layout_margin="5dp"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:src="@drawable/soja_line"
        android:layout_margin="10dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/theProblemLongID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User just have to register face with proper authentication. Then The lock itself will recognise the resistered users face to be unlocked. Otherwise it will remain locked."
                android:textColor="#99000000"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <TextView
                android:id="@+id/theProblemHireOrBuyID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want To Hire Developer"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go To the Profile"
                android:textAllCaps="false"
                android:layout_margin="20dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/round_corner_shape"
                android:onClick="GoToProfile"
                />


        </LinearLayout>

    </ScrollView>




</LinearLayout>