<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/background"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@color/cardview_dark_background"
        android:weightSum="8"
        android:gravity="right"
        >


        <SearchView
            android:queryHint="Search Category"
            android:id="@+id/searchSvID"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:hint="      Search                    "
            android:layout_margin="3dp">


        </SearchView>


        <ImageView
            android:visibility="gone"
            android:id="@+id/msgReceivedID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/msg_received"
            android:onClick="MsgReceived"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            />


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/plus"
            android:onClick="CreateNew"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/profile_pic"
            android:onClick="ProPicTouched"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            />


    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            >


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Projects                             "
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />

                <ListView
                    android:id="@+id/projectListViewID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:divider="#00000000"
                    android:dividerHeight="8dp"
                    android:paddingRight="10dp"
                    >

                </ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Problems                             "
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />

                <ListView
                    android:id="@+id/problemListViewID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#00000000"
                    android:dividerHeight="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

            </LinearLayout>


        </LinearLayout>


    </HorizontalScrollView>



</LinearLayout>